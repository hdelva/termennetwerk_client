{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": [ "dom", "es2019" ],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ], 
  "files": [
    "src/index.ts"
  ]
}
